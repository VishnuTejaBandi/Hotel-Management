<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <P class="lead">
                    <%= camp.name %>
                </P>
                <div class="list-group">
                    <li class="list-group-item active">Info 1 </li>
                    <li class="list-group-item ">Info 2 </li>
                    <li class="list-group-item ">Info 3 </li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img style="width: 100%;" class="img-responsive" src="<%=camp.image%>" alt="">
                    <div class="caption">
                        <h4 class="pull-right">$9.00/Night</h4>
                        <h4>
                            <a href="">
                                <%= camp.name %>
                            </a>
                        </h4>

                        <p>
                            <%= camp.description %>
                        </p>
                        <p>
                            <b> Subitted by <em><%= camp.author.username %></em> </b>
                        </p>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new ">Add a new comment</a>
                    </div>
                    <hr>
                    <% camp.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">

                                <strong> <%= comment.author.username %> </strong><span class="pull-right"> 10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>

                        <% }); %>
                </div>
            </div>
        </div>
    </div>





    <%- include("../partials/footer") %>