<%- include("../partials/header"); %>



    <div class="container">
        <div class="container">
            <header class="jumbotron">
                <h1>Welocme to Hotel GO!</h1>
                <p>Find Your Hotel.</p>
                <p>
                    <a href="/Hotels/new" class="btn btn-primary btn-lg">Click to add your hotel to Hotel GO!</a>

                </p>
        </div>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <h3>Our most popular Hotels</h3>
            </div>
        </div>



        <div class="row text-center" style="display:flex; flex-wrap: wrap">
            <%    camps.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= camp.image %> ">
                        <div class="caption">
                            <h4>
                                <%= camp.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/Hotels/<%= camp._id %> " class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>


    </div>
    <%- include("../partials/footer"); %>