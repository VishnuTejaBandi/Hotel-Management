<%- include("../partials/header"); %>



    <div class="container">
        <div class="container">
            <header class="jumbotron">
                <h1>Welocme to YelpCamp!</h1>
                <p>View our handpicked campgrounds.</p>
                <p>
                    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Click to add a new campground</a>

                </p>
        </div>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <h3>Our most popular campgrounds</h3>
            </div>
            <nav class="navbar navbar-light bg-light">
                Search here 
                <form class="form-inline" method = "POST" action ="/campgrounds">
                  <input class="form-control mr-sm-2" type="search" name = "search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
              </nav>
        </div>
        


        <div class="row text-center" style="display:flex; flex-wrap: wrap">
            <%    camps.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= camp.image %> ">
                        <div class="caption">
                            <h4>
                                <%= camp.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>


    </div>
    <%- include("../partials/footer"); %>